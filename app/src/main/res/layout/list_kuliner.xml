<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewKuliner"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        app:cardElevation="1dp">


        <RelativeLayout
            android:id="@+id/rlDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgListKuliner"
                android:layout_width="100dp"
                android:scaleType="centerCrop"
                android:layout_height="100dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/imgListKuliner">

                <TextView
                    android:id="@+id/tvListKategoriKuliner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:padding="3dp"
                    android:textStyle="bold"
                    android:layout_above="@+id/tvListKuliner"
                    android:textSize="10dp"
                    android:background="@color/colorPrimary"
                    android:text="Masakan" />

                <TextView
                    android:id="@+id/tvListKuliner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_centerVertical="true"
                    android:text="Kuliner" />


            </RelativeLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>